{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Desktop Defender",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "scope": [
          "$RESOURCE/*"
        ],
        "writeFile": true
      },
      "shell": {
        "open": true,
        "scope": []
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/DD32x32.png",
        "icons/DD128x128.png",
        "icons/DD128x128@2x.png",
        "icons/DD.icns"
      ],
      "identifier": "app.desktopdefender",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "ouis.csv"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "The Desktop Defender",
        "width": 870,
        "minHeight": 400,
        "minWidth": 870
      }
    ]
  }
}
